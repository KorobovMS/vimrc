" Common
set nocompatible
filetype plugin indent on
syntax on
set encoding=utf-8
set keymap=russian-jcukenwin
set iminsert=0
set imsearch=-1
set incsearch
set backspace=indent,eol,start
set hidden

" Appearance
set ruler
set number
set relativenumber
set background=dark
set wildmenu

" Backup/swap
set nobackup
set directory=~/vimswap//

" Tabs
set tabstop=4
set expandtab
set shiftwidth=4
set softtabstop=4
set autoindent

" netrw
let g:netrw_banner=0
