set nocompatible

" Common
syntax on
set encoding=utf-8
set keymap=russian-jcuken
set iminsert=0
set imsearch=-1
set ruler
set number
set incsearch
set ignorecase

" GUI
set guifont=Consolas:h10
set guioptions-=m
set guioptions-=T

" Tabs
set tabstop=4
set expandtab
set shiftwidth=4
set softtabstop=4
set autoindent
set backspace=indent,eol,start

" Backup
set backupdir=D:/vimtmp/backup
set directory=D:/vimtmp/swap

nnoremap j gj
nnoremap k gk

